generator client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"

}

model User {
  id Int @id @default(autoincrement())
  username String
  email String @unique
  password String
  is_verified Boolean @default(false)
  verify_otp String @default("")
  verify_otp_expire_at DateTime?
  reset_otp String @default("")
  reset_otp_expire_at DateTime?
  roles RolesOnUsers[] 
  owned_companies Company[]
  companies CompanyMember[]
  warehouses WarehouseManager[]
  created_at DateTime @default(now())
  auditLogs AuditLog[]
}

model Role {
  id Int @id @default(autoincrement())
  name String @unique
  users RolesOnUsers[]
  permissions RolePermissions[]
}
model Permission {
  id Int @id
  name String
  createdAt DateTime @default(now())
  roles RolePermissions[]
}

model RolePermissions {
  role Role @relation(fields: [role_id],references: [id])
  role_id Int
  permission Permission @relation(fields: [permission_id],references: [id])
  permission_id Int
  createdAt DateTime @default(now())
  @@id([role_id,permission_id])
}

model RolesOnUsers{
  Role Role @relation(fields: [role_id],references: [id])
  role_id Int 
  User User @relation(fields: [user_id],references: [id])
  user_id Int
  assigned_at DateTime @default(now())
  assigned_by String
  @@id([role_id,user_id])
}

model Company {
  id Int @id @default(autoincrement())
  name String
  description String
  created_at DateTime @default(now())
  owner User @relation(fields: [owner_id],references: [id])
  owner_id Int
  members CompanyMember[]
  warehouse Warehouse[]
  products Product[]
}
model CompanyMember {
  member User @relation(fields: [member_id],references: [id])
  member_id Int
  company Company @relation(fields: [company_id],references: [id])
  company_id Int
  joined_at DateTime @default(now())
  @@id([member_id,company_id])
  role CompanyRole @default(MEMBER) 
    
}
enum CompanyRole {
  OWNER
  ADMIN
  MEMBER
}
model Warehouse{
  id Int @id @default(autoincrement())
  name String
  address String
  company Company @relation(fields: [company_id],references: [id])
  company_id Int
  created_at DateTime @default(now())
  capacity Int @default(50)
  managers WarehouseManager[]
  products WarehouseProduct[]
}
model WarehouseManager{
  user User @relation(fields: [user_id],references: [id])
  user_id Int
  warehouse Warehouse @relation(fields: [warehouse_id],references: [id])
  warehouse_id Int
  joined_at DateTime @default(now())
  role WarehouseRole @default(MEMBER)
  @@id([user_id,warehouse_id])
}
enum WarehouseRole {
  ADMIN
  MEMBER
}

model Product {
  id Int @id @default(autoincrement())
  name String 
  description String 
  warehouses WarehouseProduct[]
  company Company @relation(fields: [company_id],references: [id])
  company_id Int
  price Int  
  createdAt DateTime @default(now())
}
model WarehouseProduct {
  product Product @relation(fields: [product_id],references: [id])
  product_id Int
  warehouse Warehouse @relation(fields: [warehouse_id],references: [id])
  stock Int
  warehouse_id Int
  added_at DateTime @default(now())
  @@id([product_id,warehouse_id])
}

model AuditLog {
  id Int @id @default(autoincrement())
  action String
  actor User @relation(fields: [actor_id],references: [id])
  actor_id Int
  ip_address String?
  created_at DateTime @default(now())
  old_data Json?
  new_data Json?
  entity String
  entity_id Int
}